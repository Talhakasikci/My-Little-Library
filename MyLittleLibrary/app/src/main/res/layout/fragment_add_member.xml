<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen0"
    tools:context=".view.AddMember"
    android:paddingTop="10dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Member Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/MemberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_member_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Member's Surname"
        app:layout_constraintTop_toBottomOf="@id/til_member_name"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/MemberSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_member_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Member ID"
        app:layout_constraintTop_toBottomOf="@id/til_member_surname"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/MemberID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Member"
        app:layout_constraintTop_toBottomOf="@id/til_member_id"
        android:layout_marginTop="33dp" />
</androidx.constraintlayout.widget.ConstraintLayout>