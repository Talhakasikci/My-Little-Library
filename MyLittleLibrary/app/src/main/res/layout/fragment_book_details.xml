<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BookDetailsFragment"
    android:background="@color/lightGreen0">

    <TextView
        android:id="@+id/bookNameDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="112dp"
        android:text="Book Name"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorInfosDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="name surname"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/bookNameDP"
        app:layout_constraintTop_toBottomOf="@+id/bookNameDP" />

    <TextView
        android:id="@+id/bookYearDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Year:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/authorInfosDP"
        app:layout_constraintTop_toBottomOf="@+id/authorInfosDP" />

    <TextView
        android:id="@+id/ISBNInfoDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ISBN"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/bookYearDP"
        app:layout_constraintTop_toBottomOf="@+id/bookYearDP" />

    <TextView
        android:id="@+id/BookTypeDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Type"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/ISBNInfoDP"
        app:layout_constraintTop_toBottomOf="@+id/ISBNInfoDP" />

    <Button
        android:id="@+id/DeleteButtonDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Delete the Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>