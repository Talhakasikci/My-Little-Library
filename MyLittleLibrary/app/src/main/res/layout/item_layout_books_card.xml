<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/acikMavi"
    android:id="@+id/booksCardView">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/cardView"
    >

    <!-- Book Number Text -->
    <TextView
        android:id="@+id/tvNumberBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"/>

    <!-- Book Name and Author Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beyaz diÅŸ"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jack"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAuthorSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Edit and Delete buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivEditButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/ivDeleteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_delete_24"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>
